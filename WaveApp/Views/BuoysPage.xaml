<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WaveApp.Views.BuoysPage"
             Title="Mis Boyas">
    <StackLayout Padding="10">
        <Label Text="Lista de Boyas" 
               FontSize="20" 
               HorizontalOptions="Center" 
               Margin="0,10,0,10" />
        <CollectionView ItemsSource="{Binding Buoys}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" CornerRadius="10" BorderColor="LightGray" Margin="5">
                        <StackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="16" />
                            <Label Text="{Binding Description}" FontSize="14" TextColor="Gray" />
                            <Label Text="{Binding Status}" FontSize="14" TextColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}" />
                            <Label Text="{Binding CurrentEnergy, StringFormat='EnergÃ­a: {0:F2} kW'}" FontSize="14" />
                            <ProgressBar Progress="{Binding CurrentEnergy, Converter={StaticResource EnergyToProgressConverter}}" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>